<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <!-- Console Appender -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender -->
    <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Hide sensitive MongoDB query logging -->
    <logger name="org.springframework.data.mongodb.core.MongoTemplate" level="WARN"/>
    <logger name="org.springframework.data.mongodb.core.MongoDbUtils" level="WARN"/>
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="org.springframework.data.mongodb" level="WARN"/>
    
    <!-- Hide Spring Security debug logs -->
    <logger name="org.springframework.security" level="INFO"/>
    
    <!-- Application logging -->
    <logger name="com.dockeriq.service" level="INFO"/>
    
    <!-- Root logger -->
    <root level="WARN">
        <appender-ref ref="Console"/>
        <appender-ref ref="File"/>
    </root>
    
</configuration>
